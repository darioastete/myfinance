---
interface Props {
    label: string;
    type?: string;
    name: string;
}

const { label, type, name } = Astro.props;

const getType = ()=>{
    switch(type){
        case 'number':
            return 'number';
        case 'text':
            return 'text';
        default:
            return 'text';
    }
}
---

<div class="flex flex-col gap-1">
    <label for={name} class="text-sm">{`${label} :`}</label>
    <input type={getType()} id={name} name={name} class="py-2 px-2 border shadow-md"/>
</div>